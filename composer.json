{
  "name": "fantassin/core",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Florian Truchot",
      "email": "florian@fantassin.fr"
    }
  ],
  "require": {
    "php-di/php-di": "^6.0",
    "vlucas/phpdotenv": "^3.6",
    "php": ">=7.0",
    "johnpbloch/wordpress": "5.2.3"
  },
  "extra": {
    "wordpress-install-dir": "wordpress"
  },
  "autoload": {
    "psr-4": {
      "Fantassin\\Core\\": "src",
      "Bazooka\\": ".scripts/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Bazooka\\CreateProject::init",
      "rm -rf .scripts"
    ]
  }
}
